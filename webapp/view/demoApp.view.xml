<mvc:View
    controllerName="demoapp.controller.demoApp"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:f="sap.ui.layout.form"
>
    <Page
        id="page"
        title="Demo application"
    >
        <SplitContainer
            id="Splitcontainer"
            initialMaster="Masterpage"
            initialDetail="Detailpage"
        >
            <masterPages>
                <Page id="Masterpage">
                    <smartFilterBar:SmartFilterBar
                        id="smartFilterBar"
                        entitySet="Orders"
                        enableBasicSearch="true"
                    >
                        <smartFilterBar:controlConfiguration>
                            <smartFilterBar:ControlConfiguration
                                id="orderIDFilter"
                                key="OrderID"
                                visibleInAdvancedArea="true"
                            >
                                <smartFilterBar:defaultFilterValues />
                            </smartFilterBar:ControlConfiguration>

                            <smartFilterBar:ControlConfiguration
                                id="customerIDFilter"
                                key="CustomerID"
                                visibleInAdvancedArea="true"
                            >
                                <smartFilterBar:defaultFilterValues />
                            </smartFilterBar:ControlConfiguration>
                        </smartFilterBar:controlConfiguration>
                    </smartFilterBar:SmartFilterBar>

                    <smartTable:SmartTable
                        id="smartTable"
                        smartFilterId="smartFilterBar"
                        entitySet="Orders"
                        tableType="ResponsiveTable"
                        header="Order items"
                        showRowCount="true"
                        enableAutoBinding="true"
                        class="sapUiResponsiveContentPadding"
                        enableAutoColumnWidth="true"
                        editTogglable="false"
                        initiallyVisibleFields="OrderID,CustomerID"
                    >
                        <Table
                            id="table"
                            selectionChange="onRowSelect"
                            mode="SingleSelectMaster"
                        />
                    </smartTable:SmartTable>
                </Page>
            </masterPages>

            <detailPages>
                <Page id="Detailpage">
                    <Panel
                        id="orderDetailsPanel"
                        headerText="Order details"
                        class="sapUiResponsiveMargin"
                        width="auto"
                    >
                    <Bar id="Bar">
                        <contentLeft>
                          <Button id="salesHeaderUpdate" text="Change" press="onChangeHeader"></Button>
                          <Button id="salesHeaderSave" text="Save" press="onSaveHeader"></Button>
                        </contentLeft>
                      </Bar>
                        <f:SimpleForm
                            id="simpleForm"
                            editable="false"
                            layout="ColumnLayout"
                        >
                            <Label
                                id="OrderField"
                                text="Order ID"
                            />
                            <Input
                                id="OrderFieldInput"
                                value="{OrderID}"
                                editable="false"
                            />
                            <Label
                                id="CustomerField"
                                text="Customer"
                            />
                            <Input
                                id="CustomerFieldInput"
                                value="{CustomerID}"
                                editable="false"
                            />
                            <Label
                                id="OrderDate"
                                text="Order date"
                            />
                            <Input
                                id="OrderDateInput"
                                value="{OrderDate}"
                                editable="false"
                            />
                            <Label
                                id="EmployeeIDField"
                                text="Employee"
                            />
                            <Input
                                id="EmployeeIDFieldInput"
                                value="{EmployeeID}"
                                editable="{editableFieldsModel>/state}"
                                change="onChangedEmployee"
                            />
                            <Label
                                id="ShipNameField"
                                text="Ship Name"
                            />
                            <Input
                                id="ShipNameFieldInput"
                                value="{ShipName}"
                                editable="{editableFieldsModel>/state}"
                                change="onChangedShipName"
                            />
                        </f:SimpleForm>
                     </Panel>

                     <Panel id="orderDetails" class="sapUiResponsiveMargin" width="auto">
                        <smartTable:SmartTable id="orderDetailsTable" entitySet="Order_Details"  
                        tableType="ResponsiveTable" header="Order items" showRowCount="true"
                        enableAutoBinding="false" class="sapUiResponsiveContentPadding" enableAutoColumnWidth="true" editTogglable="false" 
                        initiallyVisibleFields="OrderID,ProductID,UnitPrice,Quantity,Discount">
                        <Table id="orderDetailsTab" selectionChange="onSalesItemPress" mode="SingleSelectMaster">
                        </Table>
                    </smartTable:SmartTable>
                     </Panel>

                </Page>
            </detailPages>
        </SplitContainer>
    </Page>
</mvc:View>
